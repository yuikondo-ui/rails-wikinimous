<header>musubi</header>
<body>
  <h1 class="m-3">My Tasks</h1>
  <ul>
    <% @tasks.each do |task| %>
      <li>
        <% if task.completed? %>
          <i class="far fa-check-square"></i>
        <% else %>
          <i class="far fa-square"></i>
        <% end %>
        <span> <%= link_to task.title, task_path(task) %> </span>
      </li>
    <% end %>
  </ul>
  <button type="button" class="btn btn-success mx-3">
  <%= link_to "Add a new task", new_task_path %>
  </button>
</body>
